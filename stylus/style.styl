
/*

input[type=number]:not(.browser-default):focus:not([readonly]) + label{
      color: red;
    }

*/
input[type=number]:not(.browser-default),
input[type=text]:not(.browser-default)
  &:focus:not([readonly])
    border-bottom 1px solid #263238
    box-shadow 0 1px 0 0 #263238
    + label
      color #9e9e9e

.input-field
  .prefix.active
    color #263238    
